<div class="heading">
  <h1>Books</h1>
</div>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <tr>
    <td><%= %></td>
  </tr>
</table>

<h2 class="new">New book</h2>

<%= form_with model: Book.new do |f| %>
  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body %>
  </div>
  <div class="btn">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>